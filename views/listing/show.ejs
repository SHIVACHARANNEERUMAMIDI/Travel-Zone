<% layout("./layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
        <h3><%= result.title %></h3>
    </div>
    <div class="card offset-3 col-6 show-card">
        <img src="<%= result.image %>" class="card-img-top show-img" alt="Listing Image">
        <div class="card-body"> 
          <p class="card-text">
            <!-- <b><%= result.title %></b><br/> -->
            <%= result.description %><br/>
            <%= console.log(result) %>
            &#8377;<%= result.price.toLocaleString("en-IN")%><br>
            <%= result.location %><br/>
            <%= result.country %>
        </p>
        </div>
    </div>
</div>
<div class="btns">
<a href="/listings/<%= result._id %>/edit" class="btn btn-dark col-1 offset-3 add">Edit</a>
<br>
<form action="/listings/<%= result._id %>?_method=DELETE"  method="post" class="needs-validation" novalidate>
    <button class="btn btn-dark  offset-5">Delete</button>
</form>
</div>
<hr>
<div class="card offset-3 col-6 show-card mt-3 mb-3">
<form method="POST" action="/listing/<%= result._id %>/reviews">
    <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
        
    </div>
    <div class="mt-3 mb-3">
        <label for="Comment" class="form-label">Comments</label>
        <textarea cols="90" rows="5" name="review[comment]" class="form-control" placeholder="Enter the  review" required></textarea>
        <div class="invalid-feedback">
            Please enter a comment.
          </div>
    </div>
    <button class="mt-3 btn btn-outline-dark">Submit</button>
</form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // JavaScript for Bootstrap form validation
    (() => {
        'use strict'

        // Fetch all forms we want to apply validation to
        const forms = document.querySelectorAll('.needs-validation');

        // Loop over them and prevent submission if invalid
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

</body>
